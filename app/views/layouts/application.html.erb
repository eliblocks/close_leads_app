<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || "Close Leads App" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_importmap_tags %>

  <!-- Optional: eigene Styles -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "dataTables.bootstrap5.min.css", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "table-datatable-jquery.css", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "app.css", "data-turbo-track": "reload" %>

  <!-- jQuery (erforderlich fÃ¼r DataTables) -->
  <%# <script src="https://code.jquery.com/jquery-3.7.1.js"></script> %>

  <!-- Bootstrap JS -->
  <%# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> %>

  <!-- DataTables JS -->
  <%# <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script> %>
  <!-- DataTables Bootstrap JS -->
  <%# <script src="https://cdn.datatables.net/2.2.2/js/dataTables.bootstrap5.js"></script> %>

  <!-- Bootstrap CSS -->
  <%# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> %>

  <!-- DataTables Bootstrap CSS -->
  <%# <link href="https://cdn.datatables.net/2.2.2/css/dataTables.bootstrap5.css" rel="stylesheet"> %>

  <%# <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/zuramai/mazer@docs/demo/assets/compiled/css/app.css"> %>

</head>

<body>
  <!-- Bootstrap Navbar -->
  <% if false %> 
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Close Leads</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <%= link_to "Leads", leads_path, class: "nav-link" %>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <% end %>

  <div id="app">
    <div id="sidebar">
      <div class="sidebar-wrapper active">
        <div class="sidebar-header position-relative">
          <div class="d-flex justify-content-between align-items-center">
            <div class="logo">
              <a href="index.html">Close Leads</a>
            </div>
          </div>
        </div>
        <div class="sidebar-menu">
          <ul class="menu">
            <li class="sidebar-title">Menu</li>
            <li class="sidebar-item active ">
              <a href="/" class='sidebar-link'>
                <i class="bi bi-grid-fill"></i>
                <span>Leads</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag "jquery.min.js" %>
  <%= javascript_include_tag "jquery.dataTables.min.js" %>
  <%= javascript_include_tag "dataTables.bootstrap5.min.js" %>
  <%= javascript_include_tag "app.js" %>
</body>
</html>
